{
  "name": "seneca-amqp-transport-alt",
  "version": "0.1.1",
  "description": "",
  "main": "seneca-amqp-transport.js",
  "scripts": {
    "precoverage": "rimraf coverage",
    "coverage": "nyc --reporter text-summary --reporter html npm test",
    "coveralls": "nyc --reporter text-lcov npm test | coveralls",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "mocha"
  },
  "author": "Tyler Waters <tyler.waters@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.0",
    "seneca": "^3.17.0",
    "seneca-promise": "^1.2.0",
    "sinon": "^8.0.2"
  },
  "dependencies": {
    "amqplib": "^0.5.5",
    "jsonic": "^0.3.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": [
        1
      ]
    },
    "overrides": [
      {
        "files": "test/**/*.test.js",
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "mocha": {
    "timeout": false,
    "spec": "test/**/*.test.js"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
